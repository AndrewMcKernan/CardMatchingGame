<Window x:Class="MatchingCardGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MatchingCardGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Background="Black">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
        <StackPanel Name="StarterPanel" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Card Matcher" Foreground="Red" FontSize="40"></TextBlock>
            <!-- overlay with hint text -->
            <TextBlock Margin="5,2" MinWidth="50" Text="Number of pairs (max 26): " 
                   Foreground="LightSteelBlue" />
            <!-- enter term here -->
            <TextBox MinWidth="50" Name="numberOfPairsBox" Background="Transparent" Foreground="Red" Text="6" PreviewTextInput="numberOfPairsBox_PreviewTextInput"/>
            <TextBlock Text="Please enter a valid number of pairs (2-26)" Foreground="Red" FontSize="7" Visibility="Collapsed"></TextBlock>
            <Button Content="Start" Background="Black" Foreground="GreenYellow" BorderBrush="Transparent" Click="startButton_Click"></Button>
        </StackPanel>
    </StackPanel>
    
</Window>
